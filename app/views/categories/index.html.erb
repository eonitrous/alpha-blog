<h1 align="center">Listing All Categories</h1>

<!-- instructor wants it to be centered -->
<div align=center>
  <!-- instructor wants to have paginateion -->
  <%= will_paginate %>

  <% @categories.each do |category| %>

  <!-- list available categories using styles that come from Bootstrap and our definitions -->

  <ul class="listing">

    <div class="row">

      <div class="well col-md-4 col-md-offset-4">

        <li class="article-title">
        <%= link_to "#{category.name}", category_path(category) %>
      </li>

      </div>

    </div>

  </ul>

  <% end %>

  <%= will_paginate %>

</div>