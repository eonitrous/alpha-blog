<h1 align="center">Create new category</h1>

<!-- check if there are errors in saving the userto database -->
<%= render 'shared/errors', obj: @category %>



<!-- display the default form for new user entry  created by default Rails methods -->
  <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <!-- display a text box to input title field -->
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder:"Enter Category Name", autofocus: true %>
      </div>
  </div>


    <!-- display a submit button which magically displays "Create Article" text on it -->
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-lg'  %>
      </div>
  </div>

  <% end %>
<!-- end of do block to display the form -->

  <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
  </div>




