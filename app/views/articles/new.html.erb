<h1>Create an article</h1>

<!-- check if there are errors in saving the article to database -->
<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li> <%= msg %> </li>
  <% end %>
</ul>

<% end %>




<!-- display the default form for new article entry  created by default Rails methods -->
<%= form_for @article do |f| %>
  <!-- display a text box to input title field -->
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <!-- display a text area to input description field -->
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <!-- display a submit button which magically displays "Create Article" text on it -->
  <p>
    <%= f.submit %>
  </p>





<% end %>