<!-- check if there are errors in saving the article to database -->
<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-sm-12">

<!-- display the default form for new article entry  created by default Rails methods -->
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <!-- display a text box to input title field -->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder:"Title of article", autofocus: true %>
        </div>
    </div>
      <!-- display a text area to input description field -->
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, rows:10, class: "form-control", placeholder:"Body of article"%>
      </div>
    </div>
      <!-- display a submit button which magically displays "Create Article" text on it -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary bth-lg" %>
        </div>
    </div>

    <% end %>
<!-- end of do block to display the form -->

    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
    </div>


  </div> <!-- end class col-md-12 -->
</div><!-- end class row -->

